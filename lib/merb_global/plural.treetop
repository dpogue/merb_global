grammar Plural
  rule expression
    multiplication
  end
  rule multiplication
    unary '*' multiplication {
      def to_lambda
        lambda {|n| unary.to_lambda.call(n) * multiplication.to_lambda.call(n)}
      end
    }
    /
    unary '/' multiplication {
      def to_lambda
        lambda {|n| unary.to_lambda.call(n) / multiplication.to_lambda.call(n)}
      end
    }
    /
    unary '%' multiplication {
      def to_lambda
      	lambda {|n| unary.to_lambda.call(n) % multiplication.to_lambda.call(n)}
      end
    }
    /
    unary
  end
  rule unary
    '+' base {
      def to_lambda
        base.to_lambda
      end
    }
    /
    '-' base {
      def to_lambda
        lambda {|n| -base.to_lambda.call(n)}
      end
    }
    /
    '!' base {
      def to_lambda
        lambda {|n| base.to_lambda.call(n) == 0 ? 1 : 0}
      end
    }
    /
    '~' base {
      def to_lambda
        lambda {|n| ~base.call(n)}
      end
    }
    /
    base
  end

  rule base
    '(' expression ')' {
      def to_lambda
        expression.to_lambda
      end
    }
    /
    'n' {
      def to_lambda
        lambda {|n| n}
      end
    }
    /
    [0-9]* {
      def to_lambda
        lambda {|n| text_value.to_i}
      end
    }
  end
end